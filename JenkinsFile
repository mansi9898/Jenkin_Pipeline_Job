pipeline {
    agent any
    tools {
        maven "MAVEN_HOME"
    }
    environment {
    IE_DRIVER_PATH = "C:\\Users\\mansigupta05\\Downloads\\IEDriverServer_x64_4.14.0 (1)\\IEDriverServer.exe"
     }

    stages {
        stage('Setup WebDriver') {
            steps {
                // Create 'drivers' directory if it doesn't exist
                script {
                    dir('drivers') {
                        if (!fileExists('drivers')) {
                            echo "Creating 'drivers' directory..."
                            bat 'mkdir drivers'
                        }
                    }
                }
                
                // Set up WebDriver executables directory in PATH
                script {
                    env.PATH += ";C:\\Users\\mansigupta05\\Downloads\\IEDriverServer_x64_4.14.0 (1)" // Add directory containing WebDriver executables to PATH
                }
            }
        }
        stage('Build') {
            steps {
                // Clean and build the Maven project
                bat 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                // Run tests
                bat 'mvn test surefire-report:report'
            }
        }
        stage('Deploy') {
            steps {
                // Placeholder for deployment steps
                // Replace this with your deployment script or commands
                echo 'Deploying the application...'
            }
        }
        stage('Clean Up') {
            steps {
                // Clean up any temporary files or resources
                bat 'mvn clean'
            }
        }
    }
    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
